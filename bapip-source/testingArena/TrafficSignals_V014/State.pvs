State : theory

begin

	importing TypeDefinitions

	TrafficSignals : type =
		[# t : Bit(9)
		 , carLamps_EW : Colour
		 , carLamps_NS : Colour
		#]

	TrafficSignals_var : var TrafficSignals

	mkTrafficSignals (TrafficSignals_var) : bool
	=	TrafficSignals_var`t	 = 0
	AND	TrafficSignals_var`carLamps_EW	 = Red
	AND	TrafficSignals_var`carLamps_NS	 = Red


	
end State